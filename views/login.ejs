<%- include('./partials/navbar.ejs') %>

<div class="container">
    <div class="card shadow-lg p-3 mx-5 bg-white rounded">
        <div class="card-header bg-dark text-light">
            <h1>Login</h1>
        </div>
        <div class="card-body">
            <form action="/entrar" method="post">
                <div class="row">
                    <div class="row">
                        <div class="col col-md-4">
                            <label for="login"
                                >Login:*</label
                            >
                            <input
                                type="text"
                                class="form-control"
                                placeholder="Insira o nome de usuario"
                                id="login"
                                name="login"
                                required
                            />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-md-4">
                            <label for="senha">Senha:*</label>
                            <input
                                type="password"
                                class="form-control"
                                name="senha"
                                id="senha"
                                required
                            />
                        </div>
                    </div>
                </div>
                <p class="text-secondary">
                    *campo obrigatório
                </p>
                <br />
                <div class="row">
                    <div class="col">
                        <button
                    type="submit"
                    class="btn btn-success"
                >
                    Entrar
                </button>
                    </div>
                    <div class="col">
                        <p class="text-secondary">
                            Não se cadastrou? Então <a href="/cadastrar" class="text-success">cadastre-se</a>!
                        </p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>
